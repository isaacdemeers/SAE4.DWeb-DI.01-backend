{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        

        <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
        <div class="inputsBox">
        <div class="formGroup">
            <label for="username">Email</label>
            <input type="email" placeholder="E-mail" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="formGroup">
        <label for="password">Password</label>
        <input type="password" placeholder="Mot de passe" name="_password" id="password" class="form-control" autocomplete="current-password" required>
</div>
</div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>

        

        
    </form>

    <div class="mb-3">
        <a href="http://localhost:8080/register">Create an account</a>
    </div>

    {% if app.user %}
            <div class="logged mb-3">
                Vous étes déjà connecté avec l'adresse {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}
{% endblock %}
